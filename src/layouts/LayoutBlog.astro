---

const { frontmatter } = Astro.props;
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
import PagetTitle from '../components/PagetTitle.astro';
import WhatsApp from '../components/WhatsApp.astro';
import SidebarBlog from '../components/SidebarBlog.astro'
import '../styles/style.css'
---

<!doctype html>
<html lang="es">
	<head>
		<meta name="generator" content={Astro.generator} />
		<title> {frontmatter.title} | Divsa PV</title>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
		<script src="https://kit.fontawesome.com/3cf3afd2bb.js" crossorigin="anonymous"></script>

		<!-- Primary Meta Tags -->
		<title>{`${frontmatter.title} | DivsaPV`}</title>
		<meta name="title" content={`${frontmatter.title} | DivsaPV`} />
		<meta name="description" content="Descubre Tzicuri el Porvenir, un exclusivo coto privado en el municipio de San José del Valle, Bahía de Banderas. Nuestras 50 viviendas ofrecen un estilo de vida incomparable con amenidades que incluyen Casa Club, Alberca y Seguridad las 24 horas. Experimenta la armonía con más de 800 m² de áreas verdes que respetan la belleza natural de Bahía de Banderas. ¡Vive la vida de tus sueños en Tzicuri!" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={`${frontmatter.title} | DivsaPV`}/>
		<meta property="og:description" content="Descubre Tzicuri el Porvenir, un exclusivo coto privado en el municipio de San José del Valle, Bahía de Banderas. Nuestras 50 viviendas ofrecen un estilo de vida incomparable con amenidades que incluyen Casa Club, Alberca y Seguridad las 24 horas. Experimenta la armonía con más de 800 m² de áreas verdes que respetan la belleza natural de Bahía de Banderas. ¡Vive la vida de tus sueños en Tzicuri!" />
		<meta property="og:image" content="images/Tzicuri-logo-_vector.png" />

		<!-- Twitter -->

		<meta property="twitter:title" content={`${frontmatter.title} | DivsaPV`} />
		<meta property="twitter:description" content="Descubre Tzicuri el Porvenir, un exclusivo coto privado en el municipio de San José del Valle, Bahía de Banderas. Nuestras 50 viviendas ofrecen un estilo de vida incomparable con amenidades que incluyen Casa Club, Alberca y Seguridad las 24 horas. Experimenta la armonía con más de 800 m² de áreas verdes que respetan la belleza natural de Bahía de Banderas. ¡Vive la vida de tus sueños en Tzicuri!" />
		<meta property="twitter:image" content="images/Tzicuri-logo-_vector.png" />
	</head>

	<body>
		
		<Navbar />
		<PagetTitle title={frontmatter.title} img={frontmatter.image.url}/>
		
		<div class="mx-5">	
			<div class="max-w-7xl mx-auto my-5 flex gap-12 flex-col md:flex-row">
				<div class="md:w-2/3">
					<slot/>
				</div>
				<div class="md:w-1/3">
					<SidebarBlog />
				</div>
			</div>
		</div>
		<Footer />
		<WhatsApp />

		<script is:inline src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
		<script is:inline src="../../app.js"></script>

	</body>
	
</html>
