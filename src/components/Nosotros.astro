---
const icon = [
    {
        title: "Parques Eólicos",
        img: "/eolico.png",
    },
    {
        title: "Pavimentos y Carreteras",
        img: "/road.png",
    },
    {
        title: "Residencial",
        img: "/residencial.png",
    },
    {
        title: "Industrial",
        img: "/industrial.png",
    },
];

const partners = [
    {
        title: "Profesionales de la construcción",
        p: "Nuestro equipo de profesionales está dedicado a convertir tus ideas en sólidas estructuras.Creamos espacios que superan tus expectativas.",
        img: "/constructor.jpg",
        logo: "/mezcla-cajon-y-cuchara-blanco.png",
        from: "2021",
        class: "mezcla",
    },
    {
        title: "Dirección profesional de proyectos",
        p: "Contamos con un equipo experto y dedicado a la supervisión detallada de tu proyecto, asegurando una ejecución impecable de tu visión.",
        img: "/direccion-de-proyectos-divsa.jpg",
        logo: "/divsa-dp-blanco.png",
        from: "2020",
        class: "dp",
    },
];
---

<div class="pt-16 px-5 " id="nosotros">
    <div class="flex max-w-7xl mx-auto gap-10 flex-col pb-12 md:flex-row">
        <div class="w-full md:w-1/2">
            <h2 class="text-3xl text-center md:text-left">
                Acerca de <span class="text-accent">NOSOTROS</span>
                <p class="mt-5 text-center md:text-justify">
                    Somos un grupo de empresas enfocadas en el sector
                    inmobiliario con más de 10 años de experiencia, con tres
                    ejes principales; Desarrollo Inmobiliario, Construcción y
                    Dirección de Proyectos. Con compromiso, calidad e
                    innovación, transformamos ideas en realidades
                    arquitectónicas.
                </p>
                <a
                    class="btn text-4xl uppercase mx-auto block w-fit md:mx-0"
                    href="#contacto">Contactar Ahora</a
                >
            </h2>
        </div>
        <div class="w-full md:w-1/2">
            <p class="text-center">EXPERIENCIA EN:</p>
            <div class="flex flex-wrap gap-5 justify-center mt-5">
                {
                    icon.map((xp) => (
                        <div class="border-[1px] border-accent w-1/3 flex flex-col items-center justify-center rounded-md hover:transform p-2">
                            <img src={xp.img} alt={xp.title} class="w-14" />
                            <p class="text-center text-base">{xp.title}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto mt-10 text-2xl" id="contadores">
        <div class="flex items-center justify-center flex-col md:flex-row">
            <div class="w-full md:w-1/3 bg-main h-full text-center">
                <p class="text-[#fff] p-20 flex flex-col gap-7">
                    <span class="text-[75px] num" data-val="2">0</span>Proyectos <br
                    />Desarrollados
                </p>
            </div>
            <div class="w-full md:w-1/3 bg-[#14517a] h-full text-center">
                <p class="text-[#fff] p-20 flex flex-col gap-7">
                    <span class="text-[75px] num" data-val="20">00</span
                    >Proyectos <br />Construidos
                </p>
            </div>
            <div class="w-full md:w-1/3 bg-[#1a6ba0] h-full text-center">
                <p class="text-[#fff] p-20 flex flex-col gap-7">
                    <span class="text-[75px] num" data-val="5">0</span>Proyectos <br
                    />Dirigidos
                </p>
            </div>
        </div>
    </div>
    <div class="mx-5">
        <div class="max-w-7xl mx-auto mt-16">
            <h2 class="text-center mb-10">
                Empresas <span class="text-accent">Hermanas</span>
            </h2>
            <div class="hidden lg:flex gap-5 flex-col lg:flex-row">
                {
                    partners.map((p) => (
                        <div
                            class={`h-[32rem] w-full lg:w-1/2 bg-cover relative aspect-square ${p.class} px-14`}
                            style={`background-image: url(${p.img})`}
                        >
                            <div class="flex flex-col h-full justify-end pb-8 overflow-hidden">
                                <div
                                    class={`z-10 ${p.class}-up transition-all`}
                                >
                                    <img
                                        class="w-40 mx-auto z-10"
                                        src={p.logo}
                                    />
                                    <h3 class="text-center z-10 text-[#fff] mt-4">
                                        {p.title}
                                    </h3>
                                </div>
                                <p
                                    class={`text-[#fff] z-10 text-center mt-2 transition-all text-lg ${p.class}-p`}
                                >
                                    {p.p}
                                </p>
                                <p class="text-[#fff] z-10 text-center mt-5 text-lg">
                                    Desde: {p.from}
                                </p>
                            </div>
                            <div class="absolute right-0 top-0 left-0 bottom-0 bg-gradient" />
                        </div>
                    ))
                }
            </div>
            <div class="lg:hidden">
                {
                    partners.map((p) => (
                        <div class="mb-5 relative">
                            <div
                                class={`h-[32rem] w-full lg:w-1/2 bg-cover relative aspect-square px-1 bg-right flex flex-col justify-end`}
                                style={`background-image: url(${p.img})`}
                            >
                                <div class="">
                                    <div
                                        style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff "
                                        class="swiper mySwiper2 "
                                    >
                                        <div class="swiper-wrapper overflow-x-visible h-[23rem]">
                                            <div class="swiper-slide flex h-auto items-center justify-center w-full px-12">
                                                <div class={`z-10 `}>
                                                    <img
                                                        class="w-28 mx-auto z-10"
                                                        src={p.logo}
                                                    />
                                                    <h3 class="text-center z-10 text-[#fff] mt-4 text-xl">
                                                        {p.title}
                                                    </h3>
                                                    <p class="text-[#fff] z-10 text-center mt-5 text-sm">
                                                        Desde: {p.from}
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="swiper-slide flex h-auto items-center justify-center w-full px-10">
                                                <p
                                                    class={`text-[#fff] z-10 text-center mt-2 transition-all text-lg`}
                                                >
                                                    {p.p}
                                                </p>
                                            </div>
                                        </div>
                                        <div class="swiper-button-next" />
                                        <div class="swiper-button-prev" />
                                    </div>
                                </div>
                                <div class="absolute right-0 top-0 left-0 bottom-0 bg-gradient" />
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</div>
